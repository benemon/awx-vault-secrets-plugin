{
  "name": "Vault Secrets Auth",
  "kind": "cloud",
  "description": "Stores Vault connection details and authentication parameters (token, AppRole, JWT).",
  "inputs": {
    "fields": [
      { "id": "url", "type": "string", "label": "Vault URL" },
      { "id": "namespace", "type": "string", "label": "Vault Namespace", "help_text": "Vault Enterprise namespace (optional)"},
      { "id": "auth_method", "type": "string", "label": "Authentication Method", "choices": ["token", "approle", "jwt"] },
      { "id": "token_value", "type": "string", "label": "Vault Token", "secret": true },
      { "id": "approle_role_id", "type": "string", "label": "AppRole Role ID" },
      { "id": "approle_secret_id", "type": "string", "label": "AppRole Secret ID", "secret": true },
      { "id": "approle_mount_point", "type": "string", "label": "AppRole Mount Path", "default": "approle" },
      { "id": "jwt_token", "type": "string", "label": "JWT Token", "secret": true },
      { "id": "jwt_role", "type": "string", "label": "JWT Role" },
      { "id": "jwt_mount_point", "type": "string", "label": "JWT Mount Path", "default": "jwt" }
    ],
    "required": ["url", "auth_method"]
  }
}