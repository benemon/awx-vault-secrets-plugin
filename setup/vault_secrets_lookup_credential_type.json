{
  "name": "Vault Secrets Lookup",
  "kind": "cloud",
  "description": "Resolves secrets from Vault using the Vault Secrets Plugin.",
  "inputs": {
    "fields": [
      { "id": "engine_type", "type": "string", "label": "Engine Type", "choices": ["static", "dynamic"] },
      { "id": "namespace", "type": "string", "label": "Vault Namespace", "help_text": "Vault Enterprise namespace (optional)"},
      { "id": "mount", "type": "string", "label": "Mount" },
      { "id": "path", "type": "string", "label": "Secret Path" },
      { "id": "version", "type": "string", "label": "Version" },
      { "id": "secret_key", "type": "string", "label": "Secret Key" }
    ],
    "required": ["engine_type", "mount", "path"]
  },
  "plugin": "vault_secrets",
  "injectors": { "env": {} }
}