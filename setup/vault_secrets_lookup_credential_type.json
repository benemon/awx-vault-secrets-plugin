{
  "name": "Vault Secrets Lookup",
  "kind": "external",
  "description": "Resolves secrets from Vault using the Vault Secrets Plugin.",
  "inputs": {
    "fields": [
      { "id": "engine_type", "type": "string", "label": "Engine Type", "choices": ["static", "dynamic"], "required": true },
      { "id": "mount", "type": "string", "label": "Mount", "required": true },
      { "id": "path", "type": "string", "label": "Secret Path", "required": true },
      { "id": "version", "type": "integer", "label": "Version" },
      { "id": "secret_key", "type": "string", "label": "Secret Key" }
    ],
    "required": ["engine_type", "mount", "path"]
  },
  "plugin": "vault_secrets",
  "injectors": { "env": {} }
}
