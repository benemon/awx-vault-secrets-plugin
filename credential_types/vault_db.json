{
  "name": "Vault Database Dynamic Credential Lookup",
  "kind": "net",
  "inputs": {
    "fields": [
      {"id": "engine_type", "type": "string", "default": "dynamic", "label": "Engine Type"},
      {"id": "namespace", "type": "string", "label": "Vault Enterprise Namespace (optional)"},
      {"id": "dynamic_engine", "type": "string", "default": "database", "label": "Dynamic Engine"},
      {"id": "mount", "type": "string", "label": "Mount Path"},
      {"id": "path", "type": "string", "label": "Role Path"},
      {"id": "db_username", "type": "string", "label": "DB Username"},
      {"id": "db_password", "type": "string", "label": "DB Password"}
    ]
  },
  "injectors": {
    "env": {
      "DB_USERNAME": "{{ db_username }}",
      "DB_PASSWORD": "{{ db_password }}"
    }
  }
}
