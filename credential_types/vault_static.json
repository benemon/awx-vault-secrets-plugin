{
  "name": "Vault Static Secret",
  "kind": "cloud",
  "inputs": {
    "fields": [
      {
        "id": "url",
        "type": "string"
      },
      {
        "id": "auth_method",
        "type": "string",
        "choices": [
          "token",
          "approle",
          "jwt"
        ]
      },
      {
        "id": "token_value",
        "type": "string"
      },
      {
        "id": "approle_role_id",
        "type": "string"
      },
      {
        "id": "approle_secret_id",
        "type": "string"
      },
      {
        "id": "jwt_role",
        "type": "string"
      },
      {
        "id": "jwt_token",
        "type": "string"
      },
      {
        "id": "namespace",
        "type": "string"
      },
      {
        "id": "engine_type",
        "type": "string",
        "default": "static"
      },
      {
        "id": "mount",
        "type": "string"
      },
      {
        "id": "path",
        "type": "string"
      },
      {
        "id": "version",
        "type": "string"
      },
      {
        "id": "secret_key",
        "type": "string"
      }
    ]
  },
  "injectors": {
    "env": {
      "VAULT_SECRET_JSON": "{{ secret_json }}",
      "VAULT_SECRET_VALUE": "{{ secret_value }}"
    }
  }
}